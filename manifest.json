{
    "manifest_version" : 3,
    "name" : "Timer Extension",
    "version" : "1.0.0",
    "description" : "Hello World!",
    "icons" : {
        "16" : "chronometer.png",
        "48" : "chronometer.png",
        "128" : "chronometer.png"
    },
    "action" : {
        "default_icon": {
            "16" : "chronometer.png",
            "24" : "chronometer.png",
            "32" : "chronometer.png"
        },
        "default_title": "Timer Extension Action Title",
        "default_popup" : "popup.html"
    },
    "options_page" : "options.html",
    "permissions" : ["storage", "alarms"],
    "background" : {
        "service_worker" : "background.js"
    }
}